<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bisma.calendar_analyzer.ui.Analyzer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interval"
        android:text="@string/select_interval"
        android:layout_centerHorizontal="true"
        android:textColor="#3436ab"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:id="@id/from"
        android:layout_marginTop="40dp"
        android:textColor="#3436ab"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/interval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/from_date_picker"
        android:scaleY="0.9"
        android:layout_alignLeft="@+id/interval"
        android:layout_alignStart="@+id/interval"
        android:textColorPrimary ="#3436ab"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:id="@id/to"
        android:textColor="#3436ab"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        />


    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/to_date_picker"
        android:scaleY="0.9"
        android:layout_below="@+id/from"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/from_date_picker"
        android:layout_alignStart="@+id/from_date_picker"
        android:textColorPrimary ="#3436ab"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/generate_report"
        android:id="@+id/generate_report_button"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
